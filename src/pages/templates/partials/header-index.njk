{% set links = datasets.get('header-links') %}

<header id="site-header" class="header bg-white">
  <div class="container">
    <div id="header-wrap">
      <div class="row">
        <div class="col-lg-12">
          <!-- Navbar -->
          <nav class="navbar navbar-expand-lg" data-target="#headerNavbar">
            <a class="navbar-brand logo" href="/">
              <img id="logo-img" class="img-center" src="{{ url + 'assets/imgs/br-logotype-vert-dark.png'}}" alt="Breachreport Logotype">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"> <span></span>
              <span></span>
              <span></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <!-- Left nav -->
              <ul id="main-menu" class="nav navbar-nav ml-auto mr-auto" data-smartmenus-id="15583432250713113">
                {% for link in links %}
                  <li class="nav-item">
                    <a href="{{ link.ref }}" class="nav-link">
                      {{ link._name | capitalizeFirst }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </div>
            <a href="#jumbotron-verify" data-animate-scroll data-animate-scroll-offset="210" class="btn btn-theme btn-sm">
              Try For Free
            </a>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>
